{
	"name": "decoded-daily",
	"version": "0.0.2",
	"license": "XAG-1 Private Software License",
	"author": {
		"name": "xArcGit"
	},
	"contributes": {},
	"type": "module",
	"scripts": {
		"lint": "bunx biome check --apply-unsafe",
		"format": "bunx biome format --write --files-ignore-unknown=true",
		"dev": "bun run dev:client & bun run dev:server",
		"build": "bun run build:server & bun run build:client",
		"dev:server": "bun run --hot server/index.ts --config tsconfig.server.json",
		"build:server": "bun build server/index.ts --config tsconfig.server.json",
		"start:server": "bun start server/index.ts --config tsconfig.server.json",
		"dev:client": "bunx --bun astro dev --config tsconfig.client.json",
		"build:client": "bunx --bun astro build --output build --config tsconfig.client.json",
		"preview:client": "bunx --bun astro preview --config tsconfig.client.json",
		"astro:client": "bunx --bun astro --config tsconfig.client.json",
		"db:generate": "bun drizzle-kit generate",
		"db:migrate": "bun drizzle-kit migrate",
		"db:push": "bun drizzle-kit push",
		"db:pull": "bun drizzle-kit pull",
		"db:check": "bun drizzle-kit check",
		"db:up": "bun drizzle-kit up",
		"db:studio": "bun drizzle-kit studio"
	},
	"dependencies": {
		"@hono/sentry": "^1.2.0",
		"@hono/zod-validator": "^0.4.1",
		"@neondatabase/serverless": "^0.10.4",
		"add": "^2.0.6",
		"astro": "^5.0.1",
		"drizzle-orm": "^0.37.0",
		"drizzle-zod": "^0.5.1",
		"hono": "^4.6.12",
		"hono-rate-limiter": "^0.4.2",
		"pino": "^9.5.0",
		"pino-pretty": "^13.0.0",
		"zod": "^3.23.8",
		"zod-validation-error": "^3.4.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bun": "latest",
		"biome": "^0.3.3",
		"drizzle-kit": "^0.29.1",
		"husky": "^9.1.7"
	}
}
